<?xml version="1.0"?>
<kgm>
 <kgmActor id='RenTao'>
  <Visual id='Base'>
   <Mesh value="mesh_1.kgm" />
   <Material value="RenTao.mtl.kgm" />
   <Skeleton value="skel_1.kgm" />
   <Animation value="anim_1.kgm" />
  </Visual>

  <State id="idle" priority="1" time="-1" type="idle">
  	<Sound value="uloop" />
  	<Sensor value="" />
  	<Action value="idle" />
  	<Animation value="0"  start='0' end='100'/>
  	<Option type="float" name="speed" value="0.0" />
  </State>

  <State id="walk" priority="1" time="-1" type="motion">
  	<Sound value="uloop" />
  	<Sensor value="input_right" />
  	<Action value="walk_right" />
        <Animation value="0"  start='20' end='40'/>
  	<Option type="float" name="speed" value="4.0" />
  	<Option type="vec2" name="direction" value="1.0f 0.0f" />
  </State>

  <State id="run" priority="1" time="-1" type="motion">
  	<Sound value="uloop" />
  	<Sensor value="input_dright" />
  	<Action value="run_right" />
        <Animation value="0"  start='40' end='60'/>
  	<Option type="float" name="speed" value="8.0" />
  	<Option type="vec2" name="direction" value="1.0 0.0" />
  </State>

  <State id="jump" priority="2" time="-1" type="motion" switch="fall">
  	<Sound value="uloop" />
  	<Sensor value="input_up" />
  	<Action value="jump" />
        <Animation value="0"  start='60' end='80'/>
  	<Option type="float" name="speed" value="14.0" />
  	<Option type="vec2" name="direction" value="NaN -1.0" />
  </State>

  <State id="fall" priority="2" time="-1" type="motion" switch="idle">
  	<Sound value="uloop" />
  	<Sensor value="fall" />
  	<Action value="fall" />
        <Animation value="0"  start='20' end='40'/>
  	<Option type="vec2" name="direction" value="NaN NaN" />
  </State>

  <State id="dying" priority="10" time="20" type="die" switch="die">
  	<Sound value="uloop" />
        <Animation value="0"  start='20' end='40'/>
  </State>

  <State id="die" priority="10" time="-1" type="die">
  	<Sound value="uloop" />
  	<Action value="died" />
        <Animation value="0"  start='20' end='40'/>
  </State>

  <State id="punch" priority="2" time="8" type="attack" switch="idle">
  	<Sound value="uloop" />
  	<Action value="attack" />
        <Animation value="0"  start='20' end='40'/>
  	<Option type="float" name="attack" value="3" />
  	<Option type="float" name="attack_range" value="300" />
  </State>

  <State id="topunch" priority="2" time="10" type="idle" switch="punch">
  	<Sound value="uloop" />
        <Animation value="0"  start='20' end='40'/>
  </State>
 </kgmActor>
</kgm>

